<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:context="com.epicodus.neverlonely.ui.NewEventFragment">

    <LinearLayout
        android:id="@+id/top_menu_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/exit_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/x"/>

        <TextView
            android:id="@+id/create_event_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/create_event"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/save_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/save"/>

    </LinearLayout>

    <EditText
        android:id="@+id/title_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_title_black_24dp"
        android:drawablePadding="5dp"
        android:hint="@string/event_title"/>

    <EditText
        android:id="@+id/description_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_description_black_24dp"
        android:drawablePadding="5dp"
        android:hint="@string/description"/>

    <Button
        android:id="@+id/date_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="viewStart"
        android:drawableStart="@drawable/ic_date_range_black_24dp"
        android:drawablePadding="5dp"
        android:hint="@string/date"/>

    <Button
        android:id="@+id/time_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_access_time_black_24dp"
        android:textAlignment="viewStart"
        android:drawablePadding="5dp"
        android:hint="@string/time"/>

    <fragment
        android:id="@+id/place_autocomplete_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_location_on_black_24dp"
        android:textColor="#FFFFFF"
        android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"/>

    <EditText
        android:id="@+id/zip_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_location_on_black_24dp"
        android:drawablePadding="5dp"
        android:hint="@string/zip"/>

    <EditText
        android:id="@+id/max_attendees_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_people_black_24dp"
        android:drawablePadding="5dp"
        android:hint="@string/max_number_of_attendees"/>

</LinearLayout>
